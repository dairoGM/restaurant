{% extends 'baseAdmin.html.twig' %}

{% block title %}Configurar galería{% endblock %}

{% block body %}
    <div class="card shadow-sm">
        <div class="card-header">
            <div class="row" style="display: flex; justify-content: space-between; align-items: center">
                <h3 class="card-title text-bold text-gray">Configurar galería</h3>
            </div>
        </div>
        <!-- /.card-header -->


        <div class="card-body">
            <div class="row">
                <div class="col-4">
                    <h5 class="mb-0"><b>Nombre corto:</b> {{ espacio.nombreCorto | default('') }}</h5>
                </div>
                <div class="col-4">
                    {% if '1' == espacio.activo %}
                        <h5 class="mb-0"><b>Estado:</b> Habilitado</h5>
                    {% else %}
                        <h5 class="mb-0"><b>Estado:</b> Deshabilitado</h5>
                    {% endif %}
                </div>
                <div class="col-4">
                    {% if '1' == espacio.publico %}
                        <h5 class="mb-0"><b>Publico:</b> Sí</h5>
                    {% else %}
                        <h5 class="mb-0"><b>Publico:</b> No </h5>
                    {% endif %}
                </div>
            </div>
            <hr>
            {{ form_start(form) }}

            <div class="row">
                <div class="col-4 form-group">
                    <div class="row">
                        <div class="col-10">
                            {{ form_label(form.galeria) }}
                            {{ form_widget(form.galeria) }}
                            {{ form_errors(form.galeria) }}
                        </div>
                        <div class="col-2">
                            <div id="image-holder"></div>
                        </div>
                    </div>
                </div>


                <div class="col-4 form-group">
                    <br>
                    <button id="btn_guardar" class="btn btn-primary">Aceptar</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
        <table class="table table-bordered table-striped dataTable">
            <thead class="table-custom-header">
            <tr>
                <th>No.</th>
                <th>Imagen</th>
                <th class="text-center">Opciones</th>
            </tr>
            </thead>
            <tbody>
            {% for item in imagenes %}
                <tr>
                    <td width="1%">{{ loop.index }}</td>
                    <td>
                        <a href="{% if item != null %}{{ app.request.getSchemeAndHttpHost() }}/uploads/images/espacio/galeria/{{ item }} {% else %} /assets/images/usuario.png {% endif %}"
                           target="_blank">
                            <img src="{% if item != null %}{{ app.request.getSchemeAndHttpHost() }}/uploads/images/espacio/galeria/{{ item }}{% else %} /assets/images/usuario.png {% endif %}"
                                 class="img-circle" style="width: 40px;height: 40px; object-fit: cover">
                        </a>
                    </td>
                    <td class="text-center" width="2%">
                        {% set image = item %}
                        {% set imageName = image|split('.')[0] %}
                        <button title="Eliminar" class="btn btn-outline-danger elementRemove"
                                data-url="{{ path('app_espacio_eliminar_imagen', {'id':espacio.id, 'imagen':imageName}) }}">
                            <i class="fa fa-trash"></i>
                        </button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>

        </table>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $('#btn_guardar').click(function (e) {
            e.preventDefault();
            $('form[name*=espacio_galeria]').prop('action', 'galeria');
            $('form[name*=espacio_galeria]').submit();
        });


        $("#espacio_galeria_galeria").on('change', function () {
            //Get count of selected files
            var countFiles = $(this)[0].files.length;
            var imgPath = $(this)[0].value;

            var extn = imgPath.substring(imgPath.lastIndexOf('.') + 1).toLowerCase();
            var image_holder = $("#image-holder");
            image_holder.empty();
            if (extn == "gif" || extn == "png" || extn == "jpg" || extn == "jpeg") {
                if (typeof (FileReader) != "undefined") {
                    //loop for each file selected for uploaded.
                    for (var i = 0; i < countFiles; i++) {
                        var reader = new FileReader();
                        reader.onload = function (e) {
                            $("<img />", {
                                "src": e.target.result,
                                "class": "thumb-image   img-circle",
                                "style": 'width: 40px; height: 40px; position: absolute; bottom: 0;'
                            }).appendTo(image_holder);
                        }
                        image_holder.show();
                        reader.readAsDataURL($(this)[0].files[i]);
                    }
                } else {
                    alert("This browser does not support FileReader.");
                }
            } else {
                alert("Pls select only images");
            }
        });
    </script>
{% endblock %}