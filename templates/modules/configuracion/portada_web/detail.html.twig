<div class="row">
    <div class="col-6">
        <h5 class="mb-0"><b>Imagen:</b></h5>
        <h5 class="mb-0"><a
                    href="{% if item.imagen != null %}{{ app.request.getSchemeAndHttpHost() }}/uploads/images/portada_web/imagen/{{ item.imagen }} {% else %} /assets/images/usuario.png {% endif %}"
                    target="_blank">
                <img src="{% if item.imagen != null %}{{ app.request.getSchemeAndHttpHost() }}/uploads/images/portada_web/imagen/{{ item.imagen }}{% else %} /assets/images/usuario.png {% endif %}"
                     class="img-circle" style="width: 80px;height: 80px; object-fit: cover">
            </a></h5>
        <h5 class="mb-0"><b>Imagen 3:</b></h5>
        <h5 class="mb-0"><a
                    href="{% if item.imagen3 != null %}{{ app.request.getSchemeAndHttpHost() }}/uploads/images/portada_web/imagen3/{{ item.imagen3 }} {% else %} /assets/images/usuario.png {% endif %}"
                    target="_blank">
                <img src="{% if item.imagen3 != null %}{{ app.request.getSchemeAndHttpHost() }}/uploads/images/portada_web/imagen3/{{ item.imagen3 }}{% else %} /assets/images/usuario.png {% endif %}"
                     class="img-circle" style="width: 80px;height: 80px; object-fit: cover">
            </a></h5>
    </div>
    <div class="col-6">

        {% if '1' == item.publico %}
            <h5 class="mb-0"><b>Publicado:</b>Sí</h5>
        {% else %}
            <h5 class="mb-0"><b>Publicado:</b>No</h5>
        {% endif %}


        {% if '1' == item.activo %}
            <h5 class="mb-0"><b>Estado:</b> Habilitado</h5>
        {% else %}
            <h5 class="mb-0"><b>Estado:</b> Deshabilitado</h5>
        {% endif %}
        <h5 class="mb-0"><b>Imagen 2:</b></h5>
        <h5 class="mb-0"><a
                    href="{% if item.imagen2 != null %}{{ app.request.getSchemeAndHttpHost() }}/uploads/images/portada_web/imagen2/{{ item.imagen2 }} {% else %} /assets/images/usuario.png {% endif %}"
                    target="_blank">
                <img src="{% if item.imagen2 != null %}{{ app.request.getSchemeAndHttpHost() }}/uploads/images/portada_web/imagen2/{{ item.imagen2 }}{% else %} /assets/images/usuario.png {% endif %}"
                     class="img-circle" style="width: 80px;height: 80px; object-fit: cover">
            </a></h5>
        <h5 class="mb-0"><b>Imagen 4:</b></h5>
        <h5 class="mb-0"><a
                    href="{% if item.imagen4 != null %}{{ app.request.getSchemeAndHttpHost() }}/uploads/images/portada_web/imagen4/{{ item.imagen4 }} {% else %} /assets/images/usuario.png {% endif %}"
                    target="_blank">
                <img src="{% if item.imagen4 != null %}{{ app.request.getSchemeAndHttpHost() }}/uploads/images/portada_web/imagen4/{{ item.imagen4 }}{% else %} /assets/images/usuario.png {% endif %}"
                     class="img-circle" style="width: 80px;height: 80px; object-fit: cover">
            </a></h5>
    </div>

</div>
<div class="row">
    <div class="col-12">
        <h5 class="mb-0"><b>Descripción:</b> {{ item.descripcion  | raw }}</h5>
    </div>
</div>

