<div class="row">
    <div class="col-6">
        <h5 class="mb-0"><b>Nombre:</b> {{ item.nombre | default('') }}</h5>
        <h5 class="mb-0"><b>Tipo de experiencia:</b> {{ item.tipoExperienciaCulinaria.nombre | default('') }}</h5>
        <h5 class="mb-0"><b>Fecha:</b> {{ item.fecha | default('') }}</h5>

    </div>
    <div class="col-6">
        {% if '1' == item.activo %}
            <h5 class="mb-0"><b>Estado:</b> Sí</h5>
        {% else %}
            <h5 class="mb-0"><b>Estado:</b> No</h5>
        {% endif %}
        {% if '1' == item.publico %}
            <h5 class="mb-0"><b>Publicado:</b> Sí</h5>
        {% else %}
            <h5 class="mb-0"><b>Publicado:</b> No</h5>
        {% endif %}
        <h5 class="mb-0"><b>Cantidad de participantes:</b> {{ item.cantidadParticipantes | default('') }}</h5>

    </div>
</div>
<div class="row">
    <div class="col-6">
        <h5 class="mb-0"><b>Descripción:</b> {{ item.descripcion  | default('') }}</h5>
    </div>
</div>

