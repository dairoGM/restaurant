{% extends 'baseAdmin.html.twig' %}

{% block title %}Política de reservación{% endblock %}

{% block body %}

    {% include 'pages/modalDetail.html.twig' %}

    <div class="card shadow-sm">
        <div class="card-header">
            <div class="row" style="display: flex; justify-content: space-between; align-items: center">

                <h3 class="card-title text-bold text-gray">Política de reservación</h3>
                {% if registros | length == 0 %}
                    <a title="Adicionar" class="btn btn-primary mr-2"
                       href="{{ path('app_politica_reservacion_registrar') }}"><i
                                class="fa fa-plus"></i>
                    </a>
                {% endif %}
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table class="table table-bordered table-striped dataTable">
                <thead class="table-custom-header">
                <tr>
                    <th>No.</th>
                    <th>Imagen</th>
                    <th>Descripción</th>
                    <th class="text-center">Opciones</th>
                </tr>
                </thead>
                <tbody>
                {% for item in registros %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>
                            <a href="{% if item.imagen != null %}{{ app.request.getSchemeAndHttpHost() }}/uploads/images/politica_reservacion/imagen/{{ item.imagen }} {% else %} /assets/images/usuario.png {% endif %}"
                               target="_blank">
                                <img src="{% if item.imagen != null %}{{ app.request.getSchemeAndHttpHost() }}/uploads/images/politica_reservacion/imagen/{{ item.imagen }}{% else %} /assets/images/usuario.png {% endif %}"
                                     class="img-circle" style="width: 40px;height: 40px; object-fit: cover">
                            </a></td>
                        <td>{{ (item.descripcion | raw) | slice(1,100) }}</td>
                        <td width="5%" class="text-center">
                            <a title="Modificar" class="btn btn-outline-primary"
                               href="{{ path('app_politica_reservacion_modificar', {'id': item.id}) }}"><i
                                        class="fa fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>

            </table>
        </div>
        <!-- /.card-body -->
    </div>

{% endblock %}
