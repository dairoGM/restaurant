<div class="row">
    <div class="col-6">
        <h5 class="mb-0"><b>Nombre:</b> {{ item.nombre | default('')  }}</h5>
        <h5 class="mb-0"><b>Tipo de evento:</b> {{ item.tipoEvento.nombre | default('')  }}</h5>
        <h5 class="mb-0"><b>Fecha:</b> {{ item.fecha | default('')  }}</h5>
        <h5 class="mb-0"><b>Teléfono de auspiciador:</b> {{ item.telefonoAuspiciador | default('')  }}</h5>
        {% if '1' == item.gestionarBuffet %}
            <h5 class="mb-0"><b>Gestionar Buffet:</b> Habilitado</h5>
        {% else %}
            <h5 class="mb-0"><b>Gestionar Buffet:</b> Deshabilitado</h5>
        {% endif %}
    </div>
    <div class="col-6">
        {% if '1' == item.activo %}
            <h5 class="mb-0"><b>Estado:</b> Sí</h5>
        {% else %}
            <h5 class="mb-0"><b>Estado:</b> No</h5>
        {% endif %}
        <h5 class="mb-0"><b>Cantidad de participantes:</b> {{ item.cantidadParticipantes | default('')  }}</h5>
        <h5 class="mb-0"><b>Locación:</b> {{ item.locacion | default('')  }}</h5>
        {% if '1' == item.ambientacion %}
            <h5 class="mb-0"><b>Ambientación:</b> Sí</h5>
        {% else %}
            <h5 class="mb-0"><b>Ambientación:</b> No</h5>
        {% endif %}
    </div>
</div>
<div class="row">
    <div class="col-12">
        <h5 class="mb-0"><b>Descripción:</b> {{ item.descripcion  | raw }}</h5>
    </div>
</div>

