<div class="row">
    <div class="col-4">
        <h5 class="mb-0"><b>Nombre:</b> {{ item.nombre | default('') }}</h5>
    </div>
    <div class="col-4">
        <h5 class="mb-0"><b>Nombre corto:</b> {{ item.nombreCorto | default('') }}</h5>
    </div>
    <div class="col-4">
        <h5 class="mb-0"><b>Compañía:</b> {{ item.compania.nombre | default('') }}</h5>
    </div>
    <div class="col-4">
        {% if '1' == item.activo %}
            <h5 class="mb-0"><b>Estado:</b> Habilitado</h5>
        {% else %}
            <h5 class="mb-0"><b>Estado:</b> Deshabilitado</h5>
        {% endif %}
    </div>
    <div class="col-12">
        <h5 class="mb-0"><b>Descripción:</b> {{ item.descripcion | default('') }}</h5>
    </div>
</div>

